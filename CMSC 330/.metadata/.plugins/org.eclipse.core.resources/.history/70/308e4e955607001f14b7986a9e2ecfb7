#include "Ternary.h"

Ternary::Ternary(Expression* left, Expression* middle, Expression* right) : SubExpression(left, right) {
    this->middle = middle;
}


double Ternary::evaluate() {
    double conditionValue = left->evaluate();
    double trueValue = middle->evaluate();
    double falseValue = right->evaluate();

    return (conditionValue != 0) ? trueValue : falseValue;
}



